{
    "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ES2020",         
      "esModuleInterop": true,    // This allows using CommonJS-style imports alongside ES modules
      "skipLibCheck": true,       // Skips type checking of declaration files for faster compilation
      "forceConsistentCasingInFileNames": true // Ensures case consistency in imports
    },
    "include": ["server/**/*.ts"],  // Adjust this to the paths where your TypeScript files are located
    "exclude": ["node_modules"]
  }
  